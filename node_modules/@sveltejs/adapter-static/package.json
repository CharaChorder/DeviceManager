      "import": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "platforms.js"
  ],
  "devDependencies": {
    "@playwright/test": "1.30.0",
    "@types/node": "^16.18.6",
    "sirv": "^2.0.3",
