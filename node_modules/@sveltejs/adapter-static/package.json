    "typescript": "^4.9.4",
    "vite": "^4.4.2",
    "@sveltejs/kit": "^1.22.3"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^1.5.0"
  },
  "scripts": {
    "lint": "prettier --check . --config ../../.prettierrc --ignore-path .gitignore",
    "check": "tsc",
    "format": "pnpm lint --write",
