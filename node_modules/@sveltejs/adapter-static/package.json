{
  "name": "@sveltejs/adapter-static",
  "version": "2.0.3",
  "description": "Adapter for SvelteKit apps that prerenders your entire site as a collection of static files",
  "repository": {
    "type": "git",
    "url": "https://github.com/sveltejs/kit",
